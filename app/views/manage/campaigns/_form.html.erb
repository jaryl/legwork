<div class="space-y-8 divide-y divide-gray-200">

  <div>
    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-6">
        <%= form.input :title, label: false, input: false do %>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.input_field :title, class: input_class(error: form.object.errors[:title].present?) %>
          </div>
        <%- end %>
      </div>

      <div class="sm:col-span-6">
        <%= form.input :description, label: false, input: false do %>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.input_field :description, as: :text, class: input_class(error: form.object.errors[:description].present?), rows: 8 %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Write a few sentences about yourself.</p>
        <%- end %>
      </div>
    </div>
  </div>

  <div>
    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <%= form.input :start_date, label: false, input: false, wrapper_class: "sm:col-span-3" do %>
        <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex">
          <%= form.input_field :start_date, as: :date, class: input_class(error: form.object.errors[:start_date].present?) %>
        </div>
      <%- end %>

      <%= form.input :end_date, label: false, input: false, wrapper_class: "sm:col-span-3" do %>
        <%= form.label :end_date, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex">
          <%= form.input_field :end_date, as: :date, class: input_class(error: form.object.errors[:end_date].present?) %>
        </div>
      <%- end %>

      <%= form.input :funding_goal, label: false, input: false, wrapper_class: "sm:col-span-6" do %>
        <%= form.label :funding_goal, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex">
          <%= form.input_field :funding_goal, class: input_class(error: form.object.errors[:funding_goal].present?) %>
        </div>
      <%- end %>
    </div>
  </div>

</div>
